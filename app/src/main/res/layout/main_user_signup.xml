<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainUserSignup">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edittext"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="إشتراك المستخدم"
                android:textAlignment="center"
                android:textColor="@color/greyBlue"
                android:textSize="36sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/usignup_username"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:hint="اسم المستخدم"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/usignup_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:hint="البريد الإلكتروني"
                android:padding="8dp"
                android:textColor="@color/black" />


            <EditText
                android:id="@+id/usignup_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:hint="كلمة المرور"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textAlignment="viewEnd"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/ucsignup_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:hint="تأكيد كلمة المرور"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textAlignment="viewEnd"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/usignup_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/greyBlue"
                android:text="إشترك"
                android:textAlignment="center"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="281dp"
        android:layout_height="74dp"
        android:text="يرجى تذكر اسم المستخدم وكلمة السر الخاصة بحسابكم" />

</LinearLayout>